<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="#FD5757"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_snack_doll"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_margin="5dp"
        android:src="@mipmap/app_icon" />

    <TextView
        android:id="@+id/tv_snack_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_snack_doll"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:textColor="#FEFEFE"
        android:layout_toRightOf="@+id/iv_snack_doll"
        android:text="大白兔吧唧吧唧熊" />

    <ImageView
        android:id="@+id/iv_snack_coin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/iv_snack_doll"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_snack_price_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/iv_snack_coin"
        android:text="19"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_snack_price_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/tv_snack_price_now"
        android:text="原件19"
        android:textColor="#ffe7e2e2"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_snack_right"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="#72dc68" />

</RelativeLayout>