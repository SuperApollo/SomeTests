<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C_C9000000">

    <ImageView
        android:id="@+id/iv_dialog_name"
        android:layout_width="244dp"
        android:layout_height="62dp"
        android:layout_marginTop="@dimen/y83"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_dialog_dismiss"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/iv_dialog_name"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog_name" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_dialog_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_dialog_name" />

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/indicator_my_dialog"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_marginTop="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_dialog_container" />


</android.support.constraint.ConstraintLayout>