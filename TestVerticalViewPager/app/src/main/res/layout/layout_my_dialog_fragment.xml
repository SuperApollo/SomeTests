<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/C_C9000000">

    <ImageView
        android:id="@+id/iv_dialog_name"
        android:layout_width="@dimen/x733"
        android:layout_height="@dimen/y187"
        android:layout_marginTop="@dimen/y83"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_dialog_dismiss"
        android:layout_width="@dimen/x93"
        android:layout_height="@dimen/y93"
        android:layout_marginLeft="@dimen/x36"
        android:layout_marginTop="4dp"
        android:background="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/iv_dialog_name"
        app:layout_constraintTop_toTopOf="@+id/iv_dialog_name" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y37"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_dialog_name" />


</android.support.constraint.ConstraintLayout>